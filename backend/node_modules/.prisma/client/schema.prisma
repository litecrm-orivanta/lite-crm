generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////
// ENUMS
////////////////////////

enum UserRole {
  ADMIN
  MEMBER
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

enum WorkspaceType {
  SOLO
  ORG
}

enum LeadStage {
  NEW
  CONTACTED
  FOLLOW_UP
  WON
  LOST
}

enum ActivityType {
  NOTE
  STAGE_CHANGE
  TASK_CREATED
  TASK_COMPLETED
}

enum WorkflowNodeType {
  TRIGGER
  HTTP_REQUEST
  EMAIL
  DELAY
  CONDITION
  SET_VARIABLE
  WEBHOOK
  CHATGPT
  WHATSAPP
  TELEGRAM
  SLACK
  SMS
  LOG
  TRANSFORM
  FILTER
  LOOP
  MERGE
  SPLIT
}

enum WorkflowTriggerEvent {
  LEAD_CREATED
  LEAD_UPDATED
  LEAD_STAGE_CHANGED
  LEAD_ASSIGNED
  TASK_CREATED
  TASK_COMPLETED
  USER_INVITED
}

enum WorkflowExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
  CANCELLED
}

////////////////////////
// CORE MODELS
////////////////////////

model Workspace {
  id        String        @id @default(cuid())
  name      String
  type      WorkspaceType @default(SOLO)
  teamSize  String?
  createdAt DateTime      @default(now())

  // Phase-1 safe fields
  plan      String @default("FREE")
  leadCount Int    @default(0)

  // Trial tracking
  trialStartDate DateTime?
  trialEndDate   DateTime?
  isTrialActive  Boolean   @default(true) // New signups get 7-day trial

  users            User[]
  leads            Lead[]
  invites          Invite[]
  workflows        Workflow[]
  integrations     WorkspaceIntegration[]
  subscription     Subscription?
  savedFilters     SavedFilter[]
  emailTemplates   EmailTemplate[]
  customFields     CustomField[]
  emailIntegration EmailIntegration?
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String?
  passwordHash String?
  role         UserRole     @default(ADMIN)
  authProvider AuthProvider @default(LOCAL)
  providerId   String?
  isSuperAdmin Boolean      @default(false) // Only one super-admin exists for platform management
  createdAt    DateTime     @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  leads          Lead[]           @relation("LeadOwner")
  tasks          Task[]
  activities     Activity[]
  savedFilters   SavedFilter[]
  emailTemplates EmailTemplate[]
  attachments    LeadAttachment[]
  emails         Email[]
  passwordResets PasswordReset[]
}

model Invite {
  id          String    @id @default(cuid())
  email       String
  role        UserRole
  workspaceId String
  expiresAt   DateTime
  acceptedAt  DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@unique([email, workspaceId])
}

model Lead {
  id        String    @id @default(cuid())
  name      String
  phone     String?
  email     String?
  company   String?
  source    String?
  region    String?
  stage     LeadStage @default(NEW)
  createdAt DateTime  @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  owner   User   @relation("LeadOwner", fields: [ownerId], references: [id])
  ownerId String

  tasks             Task[]
  activities        Activity[]
  attachments       LeadAttachment[]
  customFieldValues LeadCustomFieldValue[]
  emails            Email[]
}

model Task {
  id        String   @id @default(cuid())
  title     String   @default("")
  note      String?
  dueAt     DateTime
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  lead   Lead   @relation(fields: [leadId], references: [id])
  leadId String

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}

model Activity {
  id        String       @id @default(cuid())
  type      ActivityType
  metadata  Json?
  createdAt DateTime     @default(now())

  lead   Lead   @relation(fields: [leadId], references: [id])
  leadId String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  nodes      WorkflowNode[]
  edges      WorkflowEdge[]
  executions WorkflowExecution[]

  @@index([workspaceId])
  @@index([workspaceId, active])
}

model WorkflowNode {
  id        String           @id @default(cuid())
  nodeId    String // Unique ID within workflow (for frontend)
  type      WorkflowNodeType
  label     String
  positionX Float            @default(0)
  positionY Float            @default(0)
  config    Json? // Node-specific configuration (JSON)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId String

  // Trigger-specific fields
  triggerEvent WorkflowTriggerEvent?

  // Edges where this node is the source
  sourceEdges WorkflowEdge[] @relation("SourceNode")
  // Edges where this node is the target
  targetEdges WorkflowEdge[] @relation("TargetNode")

  @@unique([workflowId, nodeId])
  @@index([workflowId])
}

model WorkflowEdge {
  id           String   @id @default(cuid())
  edgeId       String // Unique ID within workflow (for frontend)
  sourceHandle String? // Source handle identifier
  targetHandle String? // Target handle identifier
  createdAt    DateTime @default(now())

  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId String

  sourceNode   WorkflowNode @relation("SourceNode", fields: [sourceNodeId], references: [id], onDelete: Cascade)
  sourceNodeId String

  targetNode   WorkflowNode @relation("TargetNode", fields: [targetNodeId], references: [id], onDelete: Cascade)
  targetNodeId String

  @@unique([workflowId, edgeId])
  @@index([workflowId])
}

model WorkflowExecution {
  id          String                  @id @default(cuid())
  status      WorkflowExecutionStatus @default(PENDING)
  input       Json? // Input data for the workflow
  output      Json? // Output data from the workflow
  error       String? // Error message if failed
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime                @default(now())

  workflow   Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId String

  @@index([workflowId])
  @@index([workflowId, status])
  @@index([workflowId, createdAt])
}

enum IntegrationType {
  WHATSAPP
  TELEGRAM
  SLACK
  SMS
  CHATGPT
  OPENAI
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  TRIAL
  SUSPENDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PlanType {
  FREE
  STARTER
  PROFESSIONAL
  BUSINESS
  ENTERPRISE
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

model WorkspaceIntegration {
  id        String          @id @default(cuid())
  type      IntegrationType
  name      String // Display name
  enabled   Boolean         @default(true)
  config    Json // Encrypted credentials (API keys, tokens, etc.)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  @@unique([workspaceId, type])
  @@index([workspaceId])
}

model Subscription {
  id              String             @id @default(cuid())
  workspaceId     String             @unique
  planType        PlanType           @default(FREE)
  status          SubscriptionStatus @default(TRIAL)
  amount          Float              @default(0)
  currency        String             @default("USD")
  billingCycle    String             @default("monthly") // monthly, annual
  startDate       DateTime           @default(now())
  endDate         DateTime?
  cancelledAt     DateTime?
  cancelledReason String?
  adminNotes      String? // Admin notes for manual changes
  isManual        Boolean            @default(false) // Admin-assigned (no payment required)
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  payments  Payment[]
  invoices  Invoice[]

  @@index([status])
  @@index([planType])
  @@index([workspaceId])
}

model Payment {
  id             String        @id @default(cuid())
  subscriptionId String
  amount         Float
  currency       String        @default("USD")
  status         PaymentStatus @default(PENDING)
  paymentMethod  String? // stripe, paypal, manual
  paymentGateway String? // stripe, paypal
  transactionId  String? // External payment ID
  invoiceId      String?       @unique
  paidAt         DateTime?
  failureReason  String?
  refundAmount   Float?        @default(0)
  refundedAt     DateTime?
  metadata       Json? // Additional payment data
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  invoice      Invoice?     @relation(fields: [invoiceId], references: [id])

  @@index([subscriptionId])
  @@index([status])
  @@index([transactionId])
  @@index([paymentGateway])
  @@index([createdAt])
}

model Invoice {
  id             String        @id @default(cuid())
  subscriptionId String
  invoiceNumber  String        @unique
  amount         Float
  currency       String        @default("USD")
  status         InvoiceStatus @default(DRAFT)
  dueDate        DateTime?
  paidAt         DateTime?
  pdfUrl         String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  payment      Payment?

  @@index([subscriptionId])
  @@index([status])
  @@index([invoiceNumber])
  @@index([createdAt])
}

// Phase 1 & 2: User Features
model SavedFilter {
  id        String   @id @default(cuid())
  name      String
  filters   Json // Filter configuration (stage, source, region, query, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@index([workspaceId])
  @@index([userId])
}

model LeadAttachment {
  id        String   @id @default(cuid())
  filename  String
  fileUrl   String // URL to stored file
  fileSize  Int // Size in bytes
  mimeType  String // MIME type
  createdAt DateTime @default(now())

  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  leadId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  @@index([leadId])
  @@index([userId])
}

model CustomField {
  id        String   @id @default(cuid())
  name      String
  type      String // text, number, date, select, boolean
  options   Json? // For select type
  required  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  values LeadCustomFieldValue[]

  @@unique([workspaceId, name])
  @@index([workspaceId])
}

model LeadCustomFieldValue {
  id        String   @id @default(cuid())
  value     Json // Flexible value storage
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  leadId String

  customField   CustomField @relation(fields: [customFieldId], references: [id], onDelete: Cascade)
  customFieldId String

  @@unique([leadId, customFieldId])
  @@index([leadId])
  @@index([customFieldId])
}

model Email {
  id        String    @id @default(cuid())
  to        String // Email address
  subject   String
  body      String // HTML body
  status    String    @default("SENT") // SENT, FAILED, PENDING
  error     String?
  sentAt    DateTime?
  createdAt DateTime  @default(now())

  lead   Lead?   @relation(fields: [leadId], references: [id], onDelete: SetNull)
  leadId String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  template   EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  templateId String?

  @@index([leadId])
  @@index([userId])
  @@index([status])
}

model EmailTemplate {
  id        String   @id @default(cuid())
  name      String
  subject   String
  body      String // HTML email body
  variables Json? // Available variables (e.g., {{lead.name}}, {{lead.email}})
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  emails Email[]

  @@index([workspaceId])
  @@index([userId])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model EmailIntegration {
  id          String   @id @default(cuid())
  workspaceId String   @unique
  provider    String   @default("LITE_CRM") // "LITE_CRM" or "CUSTOM_SMTP"
  smtpHost    String?
  smtpPort    Int?
  smtpUser    String?
  smtpPass    String? // Encrypted
  smtpSecure  Boolean  @default(false)
  fromEmail   String?
  fromName    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
}

model PaymentGatewayConfig {
  id                String   @id @default(cuid())
  environment       String   @default("UAT") // "UAT" or "PRODUCTION"
  razorpayKeyId     String
  razorpayKeySecret String // Encrypted
  isActive          Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([environment])
}
