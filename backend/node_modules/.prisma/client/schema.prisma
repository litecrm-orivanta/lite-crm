generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////
// ENUMS
////////////////////////

enum UserRole {
  ADMIN
  MEMBER
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

enum WorkspaceType {
  SOLO
  ORG
}

enum LeadStage {
  NEW
  CONTACTED
  FOLLOW_UP
  WON
  LOST
}

enum ActivityType {
  NOTE
  STAGE_CHANGE
  TASK_CREATED
  TASK_COMPLETED
}

enum N8nInstanceType {
  SHARED // Approach 1: Shared instance with user management
  DEDICATED // Approach 2: Dedicated instance per workspace
}

////////////////////////
// CORE MODELS
////////////////////////

model Workspace {
  id        String        @id @default(cuid())
  name      String
  type      WorkspaceType @default(SOLO)
  teamSize  String?
  createdAt DateTime      @default(now())

  // Phase-1 safe fields
  plan      String @default("FREE")
  leadCount Int    @default(0)

  // n8n integration
  n8nSetupAt      DateTime?
  n8nInstanceType N8nInstanceType @default(SHARED) // SHARED (default) or DEDICATED
  n8nUserId       String? // n8n user ID (for SHARED instance)
  n8nUserEmail    String? // n8n user email (for SHARED instance)
  n8nInstancePort Int? // Port number (for DEDICATED instance)

  users                  User[]
  leads                  Lead[]
  invites                Invite[]
  workflowConfigurations WorkflowConfiguration[]
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  name         String?
  passwordHash String?
  role         UserRole     @default(ADMIN)
  authProvider AuthProvider @default(LOCAL)
  providerId   String?
  createdAt    DateTime     @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  leads      Lead[]     @relation("LeadOwner")
  tasks      Task[]
  activities Activity[]
}

model Invite {
  id          String    @id @default(cuid())
  email       String
  role        UserRole
  workspaceId String
  expiresAt   DateTime
  acceptedAt  DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id])

  @@unique([email, workspaceId])
}

model Lead {
  id        String    @id @default(cuid())
  name      String
  phone     String?
  email     String?
  company   String?
  source    String?
  region    String?
  stage     LeadStage @default(NEW)
  createdAt DateTime  @default(now())

  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId String

  owner   User   @relation("LeadOwner", fields: [ownerId], references: [id])
  ownerId String

  tasks      Task[]
  activities Activity[]
}

model Task {
  id        String   @id @default(cuid())
  title     String   @default("")
  note      String?
  dueAt     DateTime
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  lead   Lead   @relation(fields: [leadId], references: [id])
  leadId String

  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId String
}

model Activity {
  id        String       @id @default(cuid())
  type      ActivityType
  metadata  Json?
  createdAt DateTime     @default(now())

  lead   Lead   @relation(fields: [leadId], references: [id])
  leadId String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model WorkflowConfiguration {
  id           String   @id @default(cuid())
  event        String // e.g., "lead.created", "lead.stage.changed"
  workflowId   String // n8n workflow ID (for reference)
  webhookUrl   String? // Custom webhook URL (full URL). If null, uses default format: {n8nUrl}/webhook/{workflowId}
  useCustomUrl Boolean  @default(false) // If true, use webhookUrl. If false, construct default URL
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  @@unique([workspaceId, event])
  @@index([workspaceId])
}
